<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TELS Maintainence App</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <link
      href="https://use.fontawesome.com/releases/v5.0.1/css/all.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/css/style.css" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div id="loading-spinner"></div>
    <!-- Button that Opens Create Modal -->
    <div>
      <div id="positionLeft">
        <img
          src="/public/assets/logo-tels.png"
          alt="TELS Logo"
          style="max-width: 64px; max-height: 64px"
        />
      </div>
      <div id="positionRight">
        <button
          type="button"
          class="btn btn-primary"
          data-toggle="modal"
          data-target="#createWorkOrderModal"
        >
          Add a New Work Order
        </button>
      </div>
    </div>
    <!-- Create Work Order Modal -->
    <div
      class="modal fade"
      id="createWorkOrderModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="createWorkOrderModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="createWorkOrderModalLabel">
              Create a New Work Order
            </h4>
          </div>
          <div class="modal-body">
            <form
              id="createWorkOrder"
              method="post"
              data-parsley-validate
              action="http://localhost:8080/api/tels/v1/createWorkOrders"
            >
              <div class="form-group">
                <label for="Description">Work Order Title</label>
                <span class="text-muted small"
                  ><br />Write a 2-3 word title for your request here. Example:
                  Plumbing Leak, Electrical Hazard, Roof Repair</span
                >
                <input
                  required
                  data-parsley-required-message="Subject is required."
                  name="title"
                  class="form-control"
                  id="createTitle"
                  data-parsley-maxlength="100"
                  data-parsley-maxlength-message="Please shorten your subject to continue."
                  data-parsley-errors-container="#Description_error_container"
                />
                <p
                  class="character_limit_label text-right small"
                  id="js-character-limit-label"
                ></p>
                <p id="Description_error_container"></p>
              </div>

              <div class="form-group">
                <label for="Details">Work Order Details</label>
                <span id="instructions" class="text-muted small"
                  ><br />Please include all details about your work order
                  request here.</span
                >
                <textarea
                  required
                  data-parsley-required-message="Work Order Details are required."
                  name="description"
                  rows="5"
                  class="form-control"
                  id="createDescription"
                ></textarea>
              </div>
              <div class="form-group">
                <label for="location">Maintenance Location</label>
                <span class="text-muted small"
                  ><br />Enter the Room where the Work needs to be done.</span
                >
                <input
                  name="whereLocated"
                  required
                  data-parsley-required-message="Maintenance Location is required."
                  value=""
                  placeholder="Apt no. or area where work is needed"
                  class="form-control"
                />
              </div>

              <div class="form-group">
                <label for="categories">Select the Work Type</label>
                <span class="text-muted small"
                  ><br />Select One of the Categories to easily Characterize the
                  Work Order.</span
                >
                <select
                  name="categoryId"
                  class="form-control"
                  id="createCategories"
                >
                  <option value="" selected>Not Specified</option>
                  <% categories.forEach(function(category) {%>
                  <option value="<%=category.id%>"><%=category.name%></option>
                  <%});%>
                </select>
              </div>

              <div class="form-group">
                <strong>What's the Severity of this Task?</strong>
                <span class="text-muted small"
                  ><br />Please be precise so that urgent work can be done
                  first.</span
                >
                <br />
                <% priorities.forEach(function(priority) {%>
                <input
                  type="radio"
                  id="createPriority"
                  class="form-check-input"
                  name="priority"
                  value="<%=priority.value%>"
                />
                <label class="form-check-label" for="priority"
                  ><%=priority.name%></label
                ><br />
                <%});%>
              </div>
              <!--
              <div class="form-group">
                <div><label>Staff May Enter if No One is Home</label></div>
                <div
                  class="btn-group permission-to-enter"
                  data-toggle="buttons"
                >
                  <label class="btn btn-default" id="allowed-to-enter">
                    <input
                      type="radio"
                      name="workorder[PermissionToEnter]"
                      autocomplete="off"
                      value="true"
                    />
                    Yes
                  </label>
                  <label
                    class="btn btn-danger active"
                    id="not-allowed-to-enter"
                  >
                    <input
                      checked
                      type="radio"
                      name="workorder[PermissionToEnter]"
                      autocomplete="off"
                      value="false"
                    />
                    No
                  </label>
                </div>
              </div>

              <div class="form-group">
                <label for="entry-notes">Instructions Upon Entry</label>
                <textarea
                  name="workorder[EntryComments]"
                  class="form-control"
                  id="entry-notes"
                ></textarea>
              </div>
              -->
              <div class="text-right">
                <button
                  type="button"
                  class="btn btn-default"
                  id="reset"
                  data-dismiss="modal"
                >
                  Cancel
                </button>
                <button
                  type="submit"
                  id="js-submit-workorder"
                  class="btn btn-success"
                >
                  Submit
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div id="loading" class="spinner-grow text-info" role="status">
      <span class="sr-only">Loading...</span>
    </div>
    <!-- Success Modal -->
    <div
      class="modal fade"
      id="successModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="createWorkOrderModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body"></div>
        </div>
      </div>
    </div>
    <!-- Failure Modal -->
    <div
      class="modal fade"
      id="failureModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="createWorkOrderModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <strong>Work Order Could Not Be Created.</strong>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript">
      var createWorkOrderForm = $("#createWorkOrder");
      createWorkOrderForm.submit(function (e) {
        e.preventDefault();
        $("#createWorkOrderModal").modal("hide");
        console.log("createWorkOrderForm", createWorkOrderForm);
        console.log(
          "createWorkOrderForm.serialize()",
          createWorkOrderForm.serialize()
        );
        console.log("method", createWorkOrderForm.attr("method"));
        console.log("url", createWorkOrderForm.attr("action"));
        $.ajax({
          method: createWorkOrderForm.attr("method"),
          url: createWorkOrderForm.attr("action"),
          data: createWorkOrderForm.serialize(),
          beforeSend: function () {
            $("#loading-spinner").css("display", "flex");
          },
          complete: function () {
            $("#loading-spinner").hide();
          },
          success: function (data) {
            $("#successModal .modal-body").html(
              "<strong>Work Order Created Successfully!</strong>"
            );
            $("#successModal").modal("show");
            location.reload(true);
            setTimeout(function () {
              $("#successModal").modal("hide");
            }, 2000);
            console.log("Submission was successful.");
            console.log(data);
          },
          error: function (data) {
            $("#failureModal").modal("show");
            setTimeout(function () {
              $("#failureModal").modal("hide");
            }, 2000);
            console.log("An error occurred.");
            console.log(data);
          },
        });
      });
    </script>

    <div class="container bg-light text-dark">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Order #</th>
            <th>Title</th>
            <th>Creation Date</th>
            <th>Location</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% workOrderDetails.forEach(function(workOrder) {%>
          <tr>
            <td><%=workOrder.authorizationNumber%></td>
            <td><%=workOrder.title%></td>
            <td><%=workOrder.createdWhen%></td>
            <td><%=workOrder.whereLocated%></td>
            <td><%=workOrder.status%></td>
            <td>
              <!-- View Work Order Button -->
              <button
                id="viewButton"
                class="action_btn"
                data-toggle="modal"
                data-target="#detailWorkOrderModal"
                data-work-order-obj="<%= JSON.stringify(workOrder); %>"
              >
                <i class="fa fa-eye"></i>
              </button>
              <!-- Edit Work Order Button -->
              <button
                id="editButton"
                class="action_btn"
                data-toggle="modal"
                data-target="#editWorkOrderModal"
                data-workOrderObj="<%= JSON.stringify(workOrder); %>"
              >
                <i class="far fa-edit"></i>
              </button>
            </td>
          </tr>
          <%});%>
        </tbody>
      </table>
    </div>

    <!-- Edit Work Order Modal -->
    <div
      class="modal fade"
      id="editWorkOrderModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="editWorkOrderModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="editWorkOrderModalLabel">
              Edit the Work Order
            </h4>
          </div>
          <div class="modal-body">
            <form
              id="editWorkOrder"
              method="post"
              data-parsley-validate
              action="http://localhost:8080/api/tels/v1/editWorkOrders"
            >
              <div class="form-group">
                <label for="Order">Order #</label>
                <span class="text-muted small"
                  ><br />Identifier of the Work Order that is going to be
                  changed.</span
                >
                <input
                  data-parsley-required-message="Subject is required."
                  name="authorizationNumber"
                  class="form-control"
                  id="editOrder"
                  readonly
                  data-parsley-maxlength="100"
                  data-parsley-maxlength-message="Please shorten your subject to continue."
                  data-parsley-errors-container="#Description_error_container"
                />
                <p
                  class="character_limit_label text-right small"
                  id="js-character-limit-label"
                ></p>
                <p id="Description_error_container"></p>
              </div>

              <div class="form-group">
                <label for="Description">Work Order Title</label>
                <span class="text-muted small"
                  ><br />Write a 2-3 word title for your request here. Example:
                  Plumbing Leak, Electrical Hazard, Roof Repair</span
                >
                <input
                  data-parsley-required-message="Subject is required."
                  name="title"
                  class="form-control"
                  id="editTitle"
                  data-parsley-maxlength="100"
                  data-parsley-maxlength-message="Please shorten your subject to continue."
                  data-parsley-errors-container="#Description_error_container"
                />
                <p
                  class="character_limit_label text-right small"
                  id="js-character-limit-label"
                ></p>
                <p id="Description_error_container"></p>
              </div>

              <div class="form-group">
                <label for="Details">Work Order Details</label>
                <span id="instructions" class="text-muted small"
                  ><br />Please include all details about your work order
                  request here.</span
                >
                <textarea
                  data-parsley-required-message="Work Order Details are required."
                  name="description"
                  rows="5"
                  class="form-control"
                  id="editDescription"
                ></textarea>
              </div>
              <div class="form-group">
                <label for="editLocation">Maintenance Location</label>
                <span class="text-muted small"
                  ><br />Enter the Room where the Work needs to be done.</span
                >
                <input
                  name="whereLocated"
                  data-parsley-required-message="Maintenance Location is required."
                  id="editLocation"
                  value=""
                  class="form-control"
                />
              </div>

              <div class="form-group">
                <label for="editCategories">Select the Work Type</label>
                <span class="text-muted small"
                  ><br />Select One of the Categories to easily Characterize the
                  Work Order.</span
                >
                <select
                  name="categoryId"
                  class="form-control"
                  id="editCategories"
                >
                  <option value="">Not Specified</option>
                  <% categories.forEach(function(category) {%>
                  <option value="<%=category.id%>"><%=category.name%></option>
                  <%});%>
                </select>
              </div>

              <div class="form-group">
                <strong>Urgency of the Task</strong>
                <span class="text-muted small"
                  ><br />Please be precise so that urgent work can be done
                  first.</span
                >
                <br />
                <% priorities.forEach(function(priority) {%>
                <input
                  type="radio"
                  id="<%=priority.value%>"
                  class="form-check-input"
                  name="priority"
                  value="<%=priority.value%>"
                />
                <label class="form-check-label" for="priority"
                  ><%=priority.name%></label
                ><br />
                <%});%>
              </div>
              <div class="text-right">
                <button
                  type="button"
                  class="btn btn-default"
                  id="reset"
                  data-dismiss="modal"
                >
                  Cancel
                </button>
                <button
                  type="submit"
                  id="js-submit-workorder"
                  class="btn btn-success"
                >
                  Submit
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      var editWorkOrderForm = $("#editWorkOrder");

      var data;

      console.log("model data element", $("#editWorkOrderModal"));
      $("#editWorkOrderModal").on("shown.bs.modal", function (e) {
        console.log("related target", e.relatedTarget);
        var editButtonData = $(e.relatedTarget).data("workorderobj");
        data = editButtonData;
        $("#editOrder").val(editButtonData.authorizationNumber);
        $("#editTitle").attr("placeholder", editButtonData.title);
        $("#editDescription").attr("placeholder", editButtonData.description);
        $("#editLocation").attr("placeholder", editButtonData.whereLocated);
        if (editButtonData.category) {
          $("#editCategories").val(editButtonData.category.id);
        }
        if (editButtonData.category) {
          $(`#${editButtonData.priority}`).prop("checked", true);
        }
        console.log(editButtonData);
        console.log(editButtonData.title);
        console.log($("#editCategories"));
        console.log($("#editPriority"));
      });

      $("#editWorkOrderModal").on("hide.bs.modal", function (e) {
        $("#editTitle").attr("placeholder", "");
        $("#editDescription").attr("placeholder", "");
        $("#editLocation").attr("placeholder", "");
      });

      editWorkOrderForm.submit(function (e) {
        e.preventDefault();
        $("#editWorkOrderModal").modal("hide");

        if ($('input[name="priority"]:checked').val() == data.priority) {
          console.log("priority did not change");
          $(`#${data.priority}`, this).prop("disabled", true);
        }

        if (!!data.category && $("#editCategories").val() == data.category.id) {
          console.log("category did not change");
          $("#editCategories", this).prop("disabled", true);
        }

        if ($("#editTitle").val() === "") {
          $("#editTitle", this).prop("disabled", true);
        }

        if ($("#editDescription").val() === "") {
          $("#editDescription", this).prop("disabled", true);
        }

        if ($("#editLocation").val() === "") {
          $("#editLocation", this).prop("disabled", true);
        }

        console.log(
          "editWorkOrderForm.serialize()",
          editWorkOrderForm.serialize()
        );
        console.log("editWorkOrderForm", editWorkOrderForm);
        console.log("method", editWorkOrderForm.attr("method"));
        console.log("url", editWorkOrderForm.attr("action"));

        if (editWorkOrderForm.serializeArray().length <= 1) {
          $("#failureModal .modal-body").append(
            `<br /><q>You must edit atleast one property.</q>`
          );
          $("#failureModal").modal("show");
          setTimeout(function () {
            $("#failureModal").modal("hide");
          }, 3000);
          return;
        }

        $.ajax({
          method: editWorkOrderForm.attr("method"),
          url: editWorkOrderForm.attr("action"),
          data: editWorkOrderForm.serialize(),
          beforeSend: function () {
            $("#loading-spinner").css("display", "flex");
          },
          complete: function () {
            $("#loading-spinner").hide();
          },
          success: function (data) {
            $("#successModal .modal-body").html(
              "<strong>Work Order Edited Successfully!</strong>"
            );
            $("#successModal").modal("show");
            setTimeout(function () {
              $("#successModal").modal("hide");
            }, 2000);
            location.reload(true);
            console.log("Submission was successful.");
            console.log(data);
          },
          error: function (data) {
            $("#failureModal .modal-body").append(`<q>${data.statusText}</q>`);
            $("#failureModal").modal("show");
            setTimeout(function () {
              $("#failureModal").modal("hide");
            }, 2000);
            console.log("An error occurred.");
            console.log(data);
          },
        });
      });
    </script>
  </body>
</html>
